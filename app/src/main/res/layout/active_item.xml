<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/active_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:src="@drawable/test_chair"
        />
    <TextView
        android:id="@+id/active_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/active_image"
        app:layout_constraintLeft_toRightOf="@+id/active_image"
        android:maxEms="10"
        android:text="부성동 아이템들을부성동 아이템들을부성동 아이템들을 "
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="@color/colorblack"
        />
    <TextView
        android:id="@+id/active_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/active_text"
        app:layout_constraintStart_toStartOf="@+id/active_text"
        android:text="어제"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/active_clear"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/clear"
        app:layout_constraintTop_toTopOf="@+id/active_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorblack"
        app:layout_constraintTop_toBottomOf="@+id/active_date"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>