<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CONTROLLER.Gallery">
    <ImageView
        android:id="@+id/gallery_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="count"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/colororange"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gallery_commit"
        />
    <TextView
        android:id="@+id/gallery_commit"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="완료"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@drawable/click_effect_after"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/gallery_list_btn"
        android:layout_height="60dp"
        android:layout_width="wrap_content"
        android:background="#00ff0000"
        android:text="나의 위치"
        android:textSize="25dp"
        android:padding="10dp"
        android:textColor="@color/colorblack"
        android:gravity="center"
        android:drawableRight="@drawable/keyboard_arrow_down"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/gallery_back"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gallery_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/gallery_commit"
        />

</androidx.constraintlayout.widget.ConstraintLayout>