<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/click_effect_after"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_gray"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_list_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:src="@drawable/profile_image_man"
        />

    <TextView
        android:id="@+id/user_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/user_list_profile_image"
        app:layout_constraintStart_toEndOf="@+id/user_list_profile_image"
        android:text="닉네임"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/colorblack"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/user_list_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/user_list_name"
        app:layout_constraintStart_toEndOf="@+id/user_list_name"
        android:text="아이디"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/colorblack"
        android:textSize="17dp"
        />




    <TextView
        android:id="@+id/user_list_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/user_list_name"
        app:layout_constraintBottom_toBottomOf="@+id/user_list_profile_image"
        android:text="동작구 사당제1동"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_gray"
        />
</LinearLayout>