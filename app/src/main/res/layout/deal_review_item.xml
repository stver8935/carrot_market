<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/deal_review_item_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/test_chair"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/deal_review_item_profile_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stver8935"
        android:textColor="@color/colorblack"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@+id/deal_review_item_profile_image"
        app:layout_constraintStart_toEndOf="@+id/deal_review_item_profile_image"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/deal_review_item_profile_location_and_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="두정동 ' 6일 전"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/deal_review_item_profile_id"
        app:layout_constraintStart_toEndOf="@+id/deal_review_item_profile_id"
        app:layout_constraintBottom_toBottomOf="@+id/deal_review_item_profile_id"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/deal_review_item_profile_coment"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/deal_review_item_profile_id"
        app:layout_constraintStart_toStartOf="@+id/deal_review_item_profile_id"
        android:text="감사합니다"
        android:textSize="20dp"
        android:textColor="@color/colorblack"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorblack"
        app:layout_constraintTop_toBottomOf="@+id/deal_review_item_profile_coment"
        android:layout_marginTop="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>