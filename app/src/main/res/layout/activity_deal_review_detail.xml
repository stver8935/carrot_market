<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CONTROLLER.DealReviewDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/deal_review_detail_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/arrow_back"
            android:background="@drawable/click_effect_after"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="거래 후기 상세"
            android:textSize="20dp"
            android:textColor="@color/colorblack"
            android:gravity="center_vertical"
            />
    </LinearLayout>
<com.google.android.material.tabs.TabLayout
    android:id="@+id/deal_review_detail_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/deal_review_detail_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>