<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >

    <ImageView
        android:id="@+id/follow_product_item_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/nomalface"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/follow_product_item_sales_completed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:text="판매완료"
            android:textSize="13dp"
            android:layout_marginRight="10dp"
            android:padding="2dp"
            android:textColor="@color/colorwhite"
            android:gravity="center"
            android:background="@drawable/border_lien_fill_gray"
            />
    <TextView
        android:id="@+id/follow_product_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorblack"
        android:text="새제품"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/follow_product_item_id_and_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="root.서초구"
        android:textColor="@color/colorblack"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/follow_product_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="root.서초구"
        android:textColor="@color/colorblack"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        />
</LinearLayout>