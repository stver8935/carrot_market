<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CONTROLLER.AttentionCategory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/attention_category_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#00ff0000"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="관심 카테고리 설정"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:textColor="#000000"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="홈 화면에서 보고 싶지 않은 카테고리는"
        android:textSize="17dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="체크를 해제하세요"
        android:textColor="#000000"
        android:textSize="17dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최소 1개 이상 선택되어 있어야 합니다."
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        >
        <TableRow
            android:layout_margin="10dp"
            >
            <CheckBox
                android:id="@+id/category_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="디지털/가전"
                android:layout_weight="1"
                />
            <CheckBox
                android:id="@+id/category_2"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="가구/인테리어"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:layout_margin="10dp">
            <CheckBox
                android:id="@+id/category_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="유아동/유아도서"
                android:layout_weight="1"
                />
            <CheckBox
                android:id="@+id/category_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="생활/가공식품"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:layout_margin="10dp">
            <CheckBox
                android:id="@+id/category_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="여성의류"
                android:layout_weight="1"
                />
            <CheckBox
                android:id="@+id/category_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="여성잡화"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:layout_margin="10dp">
            <CheckBox
                android:id="@+id/category_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="뷰티/미용"
                android:layout_weight="1"
                />
            <CheckBox
                android:id="@+id/category_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="남성패션/잡화"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:layout_margin="10dp">
            <CheckBox
                android:id="@+id/category_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="스포츠/레저"
                android:layout_weight="1"
                />
            <CheckBox
                android:id="@+id/category_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="게임/취미"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:layout_margin="10dp">
            <CheckBox
                android:id="@+id/category_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="도서/티켓/음반"
                android:layout_weight="1"
                />
            <CheckBox
                android:id="@+id/category_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="반려동물용품"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:layout_margin="10dp">
            <CheckBox
                android:id="@+id/category_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="기타 중고물품"
                android:layout_weight="1"
                />
            <CheckBox
                android:id="@+id/category_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="삽니다"
                android:layout_weight="1"
                />
        </TableRow>


    </TableLayout>



</LinearLayout>