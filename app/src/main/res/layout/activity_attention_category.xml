<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CONTROLLER.AttentionCategory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/attention_category_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#00ff0000"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="관심 카테고리 설정"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:textColor="#000000"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="홈 화면에서 보고 싶지 않은 카테고리는"
        android:textSize="17dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="체크를 해제하세요"
        android:textColor="#000000"
        android:textSize="17dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최소 1개 이상 선택되어 있어야 합니다."
        android:gravity="center"
        android:layout_marginTop="20dp"/>
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/attention_category_recycler"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       android:layout_marginTop="10dp"
       >
   </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>