<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CONTROLLER.HomeSearchFragmentDeal">

<ProgressBar
    android:id="@+id/home_search_deal_progress_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="@+id/home_search_deal_recyclerview"
    app:layout_constraintBottom_toBottomOf="@+id/home_search_deal_recyclerview"
    app:layout_constraintStart_toStartOf="@+id/home_search_deal_recyclerview"
    app:layout_constraintEnd_toEndOf="@+id/home_search_deal_recyclerview"
    style="@android:style/Widget.ProgressBar.Large"
    android:visibility="gone"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_search_deal_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>