<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="40dp"
    android:background="@drawable/border_line"
    android:layout_margin="15dp"

    >

    <ImageButton
        android:id="@+id/select_my_location_button_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/clear"
        android:background="@drawable/border_line"
        app:layout_constraintTop_toTopOf="@+id/select_my_location_button_title"
        app:layout_constraintBottom_toBottomOf="@+id/select_my_location_button_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/select_my_location_button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업성동"
        android:textSize="20dp"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="5dp"
        />
    <ImageButton
        android:id="@+id/select_my_location_button_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/add"
        android:background="#00ff0000"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>