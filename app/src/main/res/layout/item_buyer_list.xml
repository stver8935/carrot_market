<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_gray"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/item_buyer_list_profile_image"
            android:layout_width="60dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/profile_image_man"
            />
        <TextView
            android:id="@+id/item_buyer_list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@id/item_buyer_list_profile_image"
            app:layout_constraintBottom_toBottomOf="@id/item_buyer_list_profile_image"
            app:layout_constraintStart_toEndOf="@id/item_buyer_list_profile_image"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/item_buyer_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="동작구 사당동"
            android:singleLine="true"
            android:textColor="@color/default_gray"

            app:layout_constraintBottom_toBottomOf="@id/item_buyer_list_id"
            app:layout_constraintStart_toEndOf="@id/item_buyer_list_id"
            android:layout_marginLeft="10dp"
            />
        
        
        <TextView
            android:id="@+id/item_buyer_list_deal_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후기 작성 마침"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        
        
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</LinearLayout>