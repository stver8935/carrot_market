<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이미 매너평가한 상대방이라면 예전 평가가 사라지고 새로운 평가로 업데이트 됩니다"
        android:textSize="20dp"
        android:lineSpacingExtra="10dp"
        android:textColor="@color/colorblack"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />



    <TextView
        android:id="@+id/dialog_manner_leave_check_good"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="매너 칭찬 남기기"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorwhite"
        android:background="@drawable/border_line_fill_orange"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/dialog_manner_leave_check_bad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비매너 평가하기"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colororange"
        android:background="@drawable/border_line_percent"
        android:padding="10dp"
        />
</LinearLayout>