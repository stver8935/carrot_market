<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
<ImageView
    android:id="@+id/product_seller_product_list_item_image"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/test_chair"
    android:background="@drawable/round_corner_nomal"
    />
    <TextView
        android:id="@+id/product_seller_product_list_item_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="물만난 물고기"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/product_seller_product_list_item_price"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="1,000원"/>
</LinearLayout>