<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/product_coment_item_profile_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/profile_image_man"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/product_coment_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="행복"
        android:textColor="@color/colorblack"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="@+id/product_coment_item_profile_image"
        app:layout_constraintLeft_toRightOf="@+id/product_coment_item_profile_image"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/product_coment_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성거읍"
        android:textSize="1dp"
        app:layout_constraintTop_toTopOf="@+id/product_coment_item_id"
        app:layout_constraintBottom_toBottomOf="@+id/product_coment_item_id"
        app:layout_constraintLeft_toRightOf="@+id/product_coment_item_id"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/product_coment_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="6일전"
        app:layout_constraintTop_toTopOf="@+id/product_coment_item_location"
        app:layout_constraintBottom_toBottomOf="@+id/product_coment_item_location"
        app:layout_constraintLeft_toRightOf="@+id/product_coment_item_location"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/product_coment_item_more"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/more_vert"
        app:layout_constraintTop_toTopOf="@+id/product_coment_item_date"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView
        android:id="@+id/product_coment_item_textarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/product_coment_item_id"
        app:layout_constraintStart_toStartOf="@+id/product_coment_item_id"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/colorblack"
        />

    <TextView
        android:id="@+id/product_coment_item_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="답글쓰기"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorblack"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/product_coment_item_textarea"
        app:layout_constraintStart_toStartOf="@+id/product_coment_item_textarea"
        />

</androidx.constraintlayout.widget.ConstraintLayout>