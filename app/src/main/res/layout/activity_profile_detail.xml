<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CONTROLLER.ProfileDetail">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageButton
            android:id="@+id/profile_detail_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/arrow_back"
            android:background="@drawable/click_effect_after"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/profile_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="프로필"
            android:gravity="center_vertical"
            android:textSize="30dp"
            android:textColor="@color/colorblack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile_detail_back"
            />
        <ImageButton
            android:id="@+id/profile_detail_share"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/share"
            android:background="@drawable/click_effect_after"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profile_detail_more"
            />
    <ImageButton
        android:id="@+id/profile_detail_more"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/more_vert"
        android:background="@drawable/click_effect_after"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
    android:id="@+id/profile_detail_view1"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/colorblack"
    app:layout_constraintTop_toBottomOf="@+id/profile_detail_title"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_detail_view1"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_detail_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile_image_man"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="15dp"
            />
            <TextView
                android:id="@+id/profile_detail_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/profile_detail_image"
                app:layout_constraintBottom_toBottomOf="@+id/profile_detail_image"
                app:layout_constraintStart_toEndOf="@+id/profile_detail_image"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="50dp"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/colorblack"
                />
            <Button
                android:id="@+id/profile_detail_manner_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="매너 평가하기"
                android:background="@drawable/round_corner_nomal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/profile_detail_image"
                app:layout_constraintStart_toStartOf="@+id/profile_detail_id"
                />
            <Button
                android:id="@+id/profile_detail_collect_see"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="모아보기"
                android:background="@drawable/round_corner_nomal"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/profile_detail_manner_evaluate"
                app:layout_constraintStart_toEndOf="@+id/profile_detail_manner_evaluate"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/profile_detail_manner_progress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:text="매너온도"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_image"
                app:layout_constraintStart_toStartOf="@+id/profile_detail_image"
                app:layout_constraintEnd_toEndOf="@+id/profile_detail_image"
                android:layout_marginTop="20dp"
                />

            <ProgressBar
                android:id="@+id/profile_detaile_manner_temperature"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/select_location_seekbar_ecffect"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_manner_progress_title"
                android:progress="365"
                android:max="1000"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첫 온도 36.5'C"
                app:layout_constraintBottom_toTopOf="@+id/profile_detaile_manner_temperature"
                app:layout_constraintStart_toStartOf="@+id/profile_detaile_manner_temperature"
                android:drawableBottom="@drawable/keyboard_arrow_down"
                android:layout_marginLeft="100dp"
                />
            <TextView
                android:id="@+id/profile_detail_myTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40.5'C"
                android:textSize="20dp"
                android:drawableRight="@drawable/neutral_face"
                android:drawableTint="@color/colororange"
                android:drawablePadding="10dp"
                android:textColor="@color/colororange"
                app:layout_constraintEnd_toEndOf="@+id/profile_detaile_manner_temperature"
                app:layout_constraintBottom_toTopOf="@+id/profile_detaile_manner_temperature"
                />
            <TextView
                android:id="@+id/profile_detail_badge"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="활동 배지 0개"
                android:textColor="@color/colorblack"
                android:drawableRight="@drawable/arrow_front"
                android:textSize="25dp"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_detaile_manner_temperature"
                />
            <View
                android:id="@+id/profile_detail_view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorblack"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_badge"
                />
            <TextView
                android:id="@+id/profile_detail_sell_product"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="판매상품 0개"
                android:textColor="@color/colorblack"
                android:textSize="25dp"
                android:drawableRight="@drawable/arrow_front"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_view2"
                />
            <View
                android:id="@+id/profile_detail_view3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorblack"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_sell_product"
                />

            <TextView
                android:id="@+id/profile_detail_receive_manner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableRight="@drawable/arrow_front"
                android:text="받은 매너 평가"
                android:textColor="@color/colorblack"
                android:textSize="25dp"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_view3"
                />
            <LinearLayout
                android:id="@+id/profile_detail_receive_manner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_receive_manner"
                >

            <TextView
                android:id="@+id/profile_detail_receive_manner_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="받은 매너 칭찬이 없습니다."
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_receive_manner_layout"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profile_detail_receive_manner_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_receive_manner_layout"
                >
            </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <View
                android:id="@+id/profile_detail_view4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorblack"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_receive_manner_layout"
                />
            <TextView
                android:id="@+id/profile_detail_deal_review"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="받은 거래 후기(0)"
                android:textColor="@color/colorblack"
                android:textSize="25dp"
                android:drawableRight="@drawable/arrow_front"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_view4"
                />
            <View
                android:id="@+id/profile_detail_view6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorblack"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_deal_review"

                />

            <LinearLayout
                android:id="@+id/profile_detail_deal_review_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_view6"
                app:layout_constraintBottom_toTopOf="@+id/profile_detail_view5"
                >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profile_detail_deal_review_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/profile_detail_deal_review_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="받은 후기가 없습니다"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_deal_review"
                />
            </LinearLayout>
            <View
                android:id="@+id/profile_detail_view5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorblack"
                app:layout_constraintTop_toBottomOf="@+id/profile_detail_deal_review_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>