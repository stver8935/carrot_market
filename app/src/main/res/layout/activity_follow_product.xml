<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CONTROLLER.FollowProduct">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorwhite"
        >
    <ImageView
        android:id="@+id/follow_product_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/click_effect_after"
        android:src="@drawable/arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="모아보기"
            android:gravity="center_vertical"
            android:textColor="@color/colorblack"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="@id/follow_product_back"
            app:layout_constraintStart_toEndOf="@id/follow_product_back"
            app:layout_constraintBottom_toBottomOf="@id/follow_product_back"
            />
        <TextView
            android:id="@+id/follow_product_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="관리"
            android:textSize="30dp"
            android:textColor="@color/colorblack"
            android:gravity="center"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_gray"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/follow_product_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>