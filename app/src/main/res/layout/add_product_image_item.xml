<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/add_product_image_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/test_chair"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="13dp"
        />
    <ImageView
        android:id="@+id/add_product_image_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clear"
        android:background="@drawable/round_corner"
        app:layout_constraintBottom_toBottomOf="@+id/add_product_image_item"
        app:layout_constraintStart_toStartOf="@+id/add_product_image_item"
        android:layout_marginBottom="85dp"
        android:layout_marginLeft="85dp" />

</androidx.constraintlayout.widget.ConstraintLayout>