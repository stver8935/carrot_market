    <item android:state_checked="false"
        android:drawable="@drawable/check_circle_before"
        android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp">

    </item>
    <!-- Checked -->
    <item android:state_checked="true" android:drawable="@drawable/check_box_after"
        android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp">
    </item>
</selector>